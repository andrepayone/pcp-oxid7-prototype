{% extends 'layout/base.html.twig' %}

{% block base_style %}
    {{ parent() }}
    {{ style({ include: oViewConf.getModuleUrl('PayonePcpPrototype', 'css/pcp.css') }) }}
{% endblock %}

{% block base_js %}
    {{ parent() }}
    <script>
        {% if oViewConf.pcpUseCustomColors() %}
        document.documentElement.style.setProperty('--pcp-primary-color', '{{ oViewConf.pcpGetColor("pcpPrimaryColor") }}');
        document.documentElement.style.setProperty('--pcp-secondary-color-bright', '{{ oViewConf.pcpGetColor("pcpSecondaryColorBright") }}');
        document.documentElement.style.setProperty('--pcp-secondary-color-dark', '{{ oViewConf.pcpGetColor("pcpSecondaryColorDark") }}');
        document.documentElement.style.setProperty('--pcp-tertiary-color-1', '{{ oViewConf.pcpGetColor("pcpTertiaryColor1") }}');
        document.documentElement.style.setProperty('--pcp-danger-color', '{{ oViewConf.pcpGetColor("pcpDangerColor") }}');
        document.documentElement.style.setProperty('--pcp-warning-color', '{{ oViewConf.pcpGetColor("pcpWarningColor") }}');
        document.documentElement.style.setProperty('--pcp-black', '{{ oViewConf.pcpGetColor("pcpBlackColor") }}');
        {% endif %}
    </script>
{% endblock %}